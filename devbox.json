{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "python@3.13",
    "poetry@2.1.4",
    "nodejs@22"
  ],
  "env": {
    "VENV_DIR": "./backend/.venv",
    "VITE_WORKSHOP_USER": "admin",
    "VITE_LEADERBOARD_BACKEND_PORT": "9080",
    "VITE_LEADERBOARD_FRONTEND_PORT": "9180",
    "LITELLM_BASE_URL": "https://gateway.ai.devboost.com"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ],
      "backend": [
        "cd backend",
        "poetry run python app.py"
      ],
      "frontend": [
        "cd frontend",
        "npm run dev:prep"
      ]
    }
  }
}
