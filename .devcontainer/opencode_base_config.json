{
	"$schema": "https://opencode.ai/config.json",
    "server": {
      "port": 4096,
      "hostname": "0.0.0.0"
    },
	"provider": {
		"DevBoost": {
			"name" : "DevBoost Gateway Models",
			"options": {
				"baseURL": "{env:LITELLM_BASE_URL}",
				"apiKey": "{env:LITELLM_API_KEY}"
			},
			"models": {
				"{env:BACKGROUND_MODEL_GATEWAY}": {"name": "gpt-5.1"},
				"{env:DEFAULT_MODEL_GATEWAY}": {"name": "gpt-5.2"}
			}
		}
	}
}
